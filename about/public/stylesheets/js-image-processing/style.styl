body
  margin 0
  padding 0
  background-color #EEE
  color #474747

header
  width 100%
  height auto
  background-color #1D1D1D
  color #EEE

  h1
    margin 0
    padding 2px 20px

#wrapper
  width 970px
  margin 20px auto 0
  padding 0

  .content-box
    margin-bottom 30px
    display inline-block
    clear both

  h2
    margin-left 5px

  .src-wrapper, .dst-wrapper
    width 350px
    height 235px
    margin 0 15px 0 5px
    float left

  .info-wrapper
    width 200px
    margin 0 5px 0 10px
    float left
    background-color white
    border-radius 10px
    -webkit-border-radius 10px

    .info
      width 180px
      padding 10px 10px 0
      display inline-block

    input
      width 180px
      margin 10px


footer
  width 100%
  margin 20px 0
  padding-top 20px
  clear both
  display inline-block
  border-top 1px solid #999

  p
    margin 0
    padding 2px 5px

  div
    width 970px
    margin 0 auto